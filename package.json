{
  "name": "chatgpt-app",
  "version": "1.0.0",
  "description": "A desktop application for ChatGPT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --mac --win --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "chatgpt",
    "openai",
    "ai",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "ChatGPT App",
    "email": "chatgpt-app@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.chatgpt.app",
    "productName": "ChatGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "about.html",
      "about.css",
      "icon.svg"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": "universal"
        },
        {
          "target": "zip",
          "arch": "universal"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "chatgpt-app@example.com"
    }
  }
}
